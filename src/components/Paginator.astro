---
import type { PaginationLink } from "@/types";

interface Props {
  nextUrl?: PaginationLink;
  prevUrl?: PaginationLink;
}

const { nextUrl, prevUrl } = Astro.props;
---

{
(prevUrl || nextUrl) && (
  <nav class="mt-8 flex text-xs sm:text-base items-center gap-x-1">
    {prevUrl && (
      <a class="py-2 hover:text-accent" data-astro-prefetch href={prevUrl.url}>
	{prevUrl.srLabel && <span class="sr-only">{prevUrl.srLabel}</span>}
	{prevUrl.text ? prevUrl.text : "Previous"}
      </a>
    )}
    {!prevUrl && (
      <span class="text-neutral-300 dark:text-neutral-700">Previous</span>
    )}

    <span>/</span>

    {nextUrl && (
      <a class="py-2 hover:text-accent" data-astro-prefetch href={nextUrl.url}>
	{nextUrl.srLabel && <span class="sr-only">{nextUrl.srLabel}</span>}
	{nextUrl.text ? nextUrl.text : "Next"}
      </a>
    )}
    {!nextUrl && (
      <span class="text-neutral-300 dark:text-neutral-700">Next</span>
    )}
  </nav>
)
}
